<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <item android:right="-5dp" android:left="-5dp">
        <shape>
            <solid android:color="@android:color/white" />
