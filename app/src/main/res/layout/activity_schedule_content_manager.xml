<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbar_schedule_content"
        android:background="#3b5bdb"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:contentInsetStart="0dp"
        >
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="10dp"
            android:layout_marginStart="6dp"
            android:id="@+id/schedule_content_cancel_btn"
            android:src="@drawable/back_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_title"
            android:text="일정 내용"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:text="수정"
            android:id="@+id/schedule_content_edit_btn"/>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_below="@+id/toolbar_schedule_content"
        android:background="#4c6ef5"/>

    <TextView
        android:id="@+id/schedule_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/toolbar_schedule_content"
        android:letterSpacing="-0.02"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_schedule"
        android:layout_below="@+id/schedule_content_title"
        android:layout_marginTop="21dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schedule_content_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/schdule_content_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:textColor="#ffffff"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/schedule_content_title"
        android:layout_below="@+id/start_schedule"
        android:id="@+id/end_schedule"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schedule_content_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/schedule_content_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:textColor="#ffffff"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/add_schedule_btn"
        android:layout_below="@+id/toolbar_schedule_content"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/add_new" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/end_schedule"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:background="@color/white"
        app:cardCornerRadius="12dp"
        android:elevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="-0.03"
                        android:textColor="#212529"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/schedule_content_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/white"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="6sp"
                        android:textColor="#7e7e7e"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="#e0e0e0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:letterSpacing="-0.03"
                        android:textColor="#212529"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/schedule_content_memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="14dp"
                        android:background="@color/white"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="6sp"
                        android:textColor="#7e7e7e"
                        android:textSize="14sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="#e0e0e0"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/delete_event_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="18dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="이벤트 삭제"
                android:textColor="#fa5252"
                android:textSize="15sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
