<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="4dp">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/notice_write_image_item"
        android:background="@drawable/shape_image"/>
    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:src="@drawable/delete_picture"
        android:id="@+id/notice_write_image_icon"
        android:layout_alignEnd="@+id/notice_write_image_item"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"/>
</RelativeLayout>
</GridLayout>