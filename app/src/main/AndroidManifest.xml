        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sauce.inunion.LoginActivity">

        </activity>
        <activity android:name="com.sauce.inunion.MainActivity" android:windowSoftInputMode="adjustNothing">

        </activity>
        <activity android:name=".MainActivityManager"/>
        <activity android:name="com.sauce.inunion.NoticeWrite"/>
        <activity android:name="com.sauce.inunion.NoticeModify"/>
